    <div id="cookie-bar" class="fixed bottom-16 md:bottom-0 left-0 right-0 bg-gray-900 text-white py-3 px-4 shadow-2xl z-50 transition-transform duration-300 transform translate-y-0">
        <div class="max-w-screen-xl mx-auto">
            <div class="flex items-center justify-between gap-4">
                <div class="flex items-center gap-3 flex-1">
                    <i class="fas fa-cookie-bite text-xl text-yellow-400 flex-shrink-0"></i>
