---
import '../styles/global.css';
import Navigation from '../components/Navigation.astro';
import UrgentOfferBar from '../components/UrgentOfferBar.astro'
import Footer from '../components/Footer.astro'
import StickyCtaBar from '../components/StickyCtaBar.astro'
import CookiePolicy from '../components/CookiePolicy.astro'
interface Props {
  title: string;
  description: string;
  keywords?: string;
  ogImage?: string;
  canonicalUrl?: string;
}

const {
  title,
  description,
  keywords = "web design romania, seo saloane frumusete, marketing digital clinici medicale, website salon, site clinica, bucuresti",
  ogImage = "https://digitalpro.ro/assets/images/og-image.jpg",
  canonicalUrl = "https://digitalpro.ro"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content={keywords}>
    <meta name="author" content="Digital Pro">
    <meta name="robots" content="index, follow">
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:type" content="website">
    <meta property="og:url" content={canonicalUrl}>
    <meta property="og:image" content={ogImage}>
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content={title}>
    <meta name="twitter:description" content={description}>
    <link rel="canonical" href={canonicalUrl}>
    <meta name="geo.region" content="RO">
    <meta name="geo.placename" content="București, România">

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`}>
    <link rel="shortcut icon" href={`${import.meta.env.BASE_URL}favicon.svg`}>
    <link rel="apple-touch-icon" href={`${import.meta.env.BASE_URL}favicon.svg`}>

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <!-- Flowbite Pro (Local) - after Tailwind -->
    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}css/flowbite.css`}>

    <!-- Custom CSS - loaded last to override -->
    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}css/custom.css`}>
</head>
<body class="bg-gray-50">

    <!-- Sticky Header Container -->
    <div class="header-container">
        <UrgentOfferBar />
        <Navigation />
    </div>

    <!-- Main Content -->
    <slot />

    <Footer />

    <StickyCtaBar />

    <CookiePolicy />

    <!-- Hidden dummy elements for Flowbite compatibility -->
    <div id="themeToggleDarkIcon" class="hidden" style="display: none !important;"></div>
    <div id="themeToggleLightIcon" class="hidden" style="display: none !important;"></div>
    <button id="themeToggle" style="display: none !important;"></button>

    <!-- Flowbite Pro JS (Local) with error handling -->
    <script is:inline>
        // Suppress Flowbite errors for missing elements
        window.addEventListener('error', function(e) {
            if (e.message && (
                e.message.includes('null is not an object') ||
                e.message.includes('Cannot read property') ||
                e.message.includes('navbar')
            )) {
                e.preventDefault();
                return true;
            }
        }, true);
    </script>
    <script is:inline src={`${import.meta.env.BASE_URL}js/flowbite.js`}></script>

    <!-- Custom App JS -->
    <script is:inline src={`${import.meta.env.BASE_URL}js/app.js`}></script>
</body>
</html>
