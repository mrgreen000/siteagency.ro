---
import '../styles/global.css';
import Navigation from '../components/Navigation.astro';
import UrgentOfferBar from '../components/UrgentOfferBar.astro'
import Footer from '../components/Footer.astro'
import StickyCtaBar from '../components/StickyCtaBar.astro'
import CookiePolicy from '../components/CookiePolicy.astro'
interface Props {
  title: string;
  description: string;
  keywords?: string;
  ogImage?: string;
  canonicalUrl?: string;
}

const {
  title,
  description,
  keywords = "web design ploiesti, creare site ploiesti, seo ploiesti, web design romania, seo saloane frumusete, marketing digital clinici medicale, website salon, site clinica, agentie web ploiesti",
  ogImage = "https://www.siteagency.ro/assets/images/og-image.jpg",
  canonicalUrl = "https://www.siteagency.ro"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content={keywords}>
    <meta name="author" content="SiteAgency.ro">
    <meta name="robots" content="index, follow">
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:type" content="website">
    <meta property="og:url" content={canonicalUrl}>
    <meta property="og:image" content={ogImage}>
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content={title}>
    <meta name="twitter:description" content={description}>
    <link rel="canonical" href={canonicalUrl}>
    <meta name="geo.region" content="RO">
    <meta name="geo.placename" content="Ploiești, Prahova, România">

    <!-- Structured Data - Schema.org -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "SiteAgency.ro",
      "description": "Agenție de web design, SEO și marketing digital pentru saloane de frumusețe, clinici medicale și afaceri locale din România",
      "url": "https://www.siteagency.ro",
      "telephone": "+40721633336",
      "email": "contact@siteagency.ro",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Str. Ana Ipătescu nr. 10",
        "addressLocality": "Ploiești",
        "addressRegion": "Prahova",
        "postalCode": "100337",
        "addressCountry": "RO"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": "44.9333",
        "longitude": "26.0167"
      },
      "openingHoursSpecification": [
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
          "opens": "09:00",
          "closes": "18:00"
        }
      ],
      "priceRange": "€€",
      "areaServed": {
        "@type": "Country",
        "name": "România"
      },
      "sameAs": [
        "https://www.facebook.com/siteagency",
        "https://www.instagram.com/siteagency",
        "https://www.linkedin.com/company/siteagency"
      ]
    }
    </script>

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="shortcut icon" href="/favicon.svg">
    <link rel="apple-touch-icon" href="/favicon.svg">

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <!-- Flowbite Pro (Local) - after Tailwind -->
    <link rel="stylesheet" href="/css/flowbite.css">

    <!-- Custom CSS - loaded last to override -->
    <link rel="stylesheet" href="/css/custom.css">
</head>
<body class="bg-gray-50">

    <!-- Sticky Header Container -->
    <div class="header-container">
        <UrgentOfferBar />
        <Navigation />
    </div>

    <!-- Main Content -->
    <slot />

    <Footer />

    <StickyCtaBar />

    <CookiePolicy />

    <!-- Hidden dummy elements for Flowbite compatibility -->
    <div id="themeToggleDarkIcon" class="hidden" style="display: none !important;"></div>
    <div id="themeToggleLightIcon" class="hidden" style="display: none !important;"></div>
    <button id="themeToggle" style="display: none !important;"></button>

    <!-- Flowbite Pro JS (Local) with error handling -->
    <script is:inline>
        // Suppress Flowbite errors for missing elements
        window.addEventListener('error', function(e) {
            if (e.message && (
                e.message.includes('null is not an object') ||
                e.message.includes('Cannot read property') ||
                e.message.includes('navbar')
            )) {
                e.preventDefault();
                return true;
            }
        }, true);
    </script>
    <script is:inline src="/js/flowbite.js"></script>

    <!-- Custom App JS -->
    <script is:inline src="/js/app.js"></script>
</body>
</html>
