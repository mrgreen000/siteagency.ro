---
import '../styles/global.css';
import Navigation from '../components/Navigation.astro';
import UrgentOfferBar from '../components/UrgentOfferBar.astro'
import Footer from '../components/Footer.astro'
import StickyCtaBar from '../components/StickyCtaBar.astro'
import CookiePolicy from '../components/CookiePolicy.astro'
interface Props {
  title: string;
  description: string;
  keywords?: string;
  ogImage?: string;
  canonicalUrl?: string;
}

const {
  title,
  description,
  keywords = "web design ploiesti, creare site ploiesti, seo ploiesti, web design romania, seo saloane frumusete, marketing digital clinici medicale, website salon, site clinica, agentie web ploiesti",
  ogImage = "https://www.siteagency.ro/assets/images/og-image.jpg",
  canonicalUrl = "https://www.siteagency.ro"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content={keywords}>
    <meta name="author" content="SiteAgency.ro">
    <meta name="robots" content="index, follow">
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:type" content="website">
    <meta property="og:url" content={canonicalUrl}>
    <meta property="og:image" content={ogImage}>
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content={title}>
    <meta name="twitter:description" content={description}>
    <link rel="canonical" href={canonicalUrl}>
    <meta name="geo.region" content="RO">
    <meta name="geo.placename" content="Ploiești, Prahova, România">

    <!-- Structured Data - Schema.org -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "SiteAgency.ro",
      "description": "Agenție de web design, SEO și marketing digital pentru saloane de frumusețe, clinici medicale și afaceri locale din România",
      "url": "https://www.siteagency.ro",
      "email": "contact@siteagency.ro",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Str. Ana Ipătescu nr. 10",
        "addressLocality": "Ploiești",
        "addressRegion": "Prahova",
        "postalCode": "100337",
        "addressCountry": "RO"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": "44.9333",
        "longitude": "26.0167"
      },
      "openingHoursSpecification": [
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
          "opens": "09:00",
          "closes": "18:00"
        }
      ],
      "priceRange": "€€",
      "areaServed": {
        "@type": "Country",
        "name": "România"
      },
      "sameAs": [
        "https://www.facebook.com/siteagency",
        "https://www.instagram.com/siteagency",
        "https://www.linkedin.com/company/siteagency"
      ]
    }
    </script>

    <!-- DNS Prefetch and Preconnect for CDN resources -->
    <link rel="dns-prefetch" href="https://cdnjs.cloudflare.com">
    <link rel="preconnect" href="https://cdnjs.cloudflare.com" crossorigin>

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="shortcut icon" href="/favicon.svg">
    <link rel="apple-touch-icon" href="/favicon.svg">

    <!-- Critical CSS - loaded synchronously -->
    <link rel="stylesheet" href="/css/custom.css">

    <!-- Non-critical Flowbite CSS - deferred for better FCP/LCP -->
    <link rel="preload" href="/css/flowbite.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="/css/flowbite.css"></noscript>

    <!-- Font Awesome for icons - deferred with font-display swap -->
    <link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"></noscript>
    <style>
        /* Font-display swap for Font Awesome to prevent layout shift */
        @font-face {
            font-family: 'Font Awesome 6 Free';
            font-display: swap;
        }
        @font-face {
            font-family: 'Font Awesome 6 Brands';
            font-display: swap;
        }
    </style>
</head>
<body class="bg-gray-50">

    <!-- Sticky Header Container -->
    <div class="header-container">
        <UrgentOfferBar />
        <Navigation />
    </div>

    <!-- Main Content -->
    <slot />

    <Footer />

    <StickyCtaBar />

    <CookiePolicy />

    <!-- Disable Flowbite dark mode - suppress errors -->
    <script is:inline>
        // Suppress all Flowbite-related errors globally
        window.addEventListener('error', function(e) {
            // Suppress theme toggle and navbar related errors from Flowbite
            if (e.message && (
                e.message.includes('null') ||
                e.message.includes('setAttribute') ||
                e.message.includes('theme') ||
                e.message.includes('navbar')
            )) {
                e.preventDefault();
                e.stopPropagation();
                return true;
            }
        }, true);

        // Create dummy theme elements before Flowbite initializes
        (function() {
            const darkIcon = document.createElement('div');
            darkIcon.id = 'themeToggleDarkIcon';
            darkIcon.className = 'hidden';
            darkIcon.style.display = 'none';
            // Add setAttribute method to prevent errors
            darkIcon.setAttribute = function() {};

            const lightIcon = document.createElement('div');
            lightIcon.id = 'themeToggleLightIcon';
            lightIcon.className = 'hidden';
            lightIcon.style.display = 'none';
            lightIcon.setAttribute = function() {};

            const toggleBtn = document.createElement('button');
            toggleBtn.id = 'themeToggle';
            toggleBtn.type = 'button';
            toggleBtn.style.display = 'none';
            toggleBtn.addEventListener = function() {};

            document.body.appendChild(darkIcon);
            document.body.appendChild(lightIcon);
            document.body.appendChild(toggleBtn);
        })();
    </script>

    <!-- Flowbite Pro JS (Local) - deferred for better performance -->
    <script src="/js/flowbite.js" defer></script>

    <!-- Custom App JS - deferred for better performance -->
    <script src="/js/app.js" defer></script>
</body>
</html>
