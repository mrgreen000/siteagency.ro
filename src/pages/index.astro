                    <div class="hidden lg:block absolute top-24 -right-8 text-pink-400 text-4xl z-10">
                        <i class="fas fa-arrow-right"></i>
                    </div>
                </div>

                <!-- Step 3 -->
                <div class="relative">
                    <div class="premium-card p-8 text-center h-full animate-fade-in-up" style="animation-delay: 0.4s;">
                        <div class="w-20 h-20 mx-auto mb-6 rounded-full flex items-center justify-center text-3xl font-bold text-white" style="background: var(--gradient-3);">
